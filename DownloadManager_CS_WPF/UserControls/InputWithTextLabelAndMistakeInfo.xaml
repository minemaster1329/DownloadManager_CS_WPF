<UserControl x:Class="DownloadManager_CS_WPF.UserControls.InputWithTextLabelAndMistakeInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DownloadManager_CS_WPF.UserControls"
             mc:Ignorable="d" 
             Height="80" d:DesignWidth="100" x:Name="InputWithTextLabelAndMistakeInfoControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding ElementName=InputWithTextLabelAndMistakeInfoControl, Path=LabelText}"/>
        <Label Content="{Binding ErrorLabelText, Mode=OneWay}" Grid.Row="2" Foreground="PaleVioletRed"/>
        <TextBox Grid.Row="1" Text="{Binding InputText}" TextWrapping="Wrap" Margin="0,5,0,5" MaxLines="1"/>
    </Grid>
</UserControl>
